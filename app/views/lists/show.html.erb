<% if @list.photo.attached? %>
  <div class="banner" style="background-image: url('<%= cl_image_path @list.photo.key, crop: :fill %>')">
    <div class="container">
      <h1><%= @list.name %></h1>
    </div>
    <%# <div class="btn-warning">TODO movie count</div> %>
  </div>
<% else %>
  <div class="banner">
    <div class="container">
      <h1><%= @list.name %></h1>
    </div>
    <div class="btn btn-warning">TODO movie count</div>
    <%= link_to 'Back to lists', root_path, class: 'btn btn-primary' %>
  </div>
<% end %>

<div class="container mt-3">
  <%= link_to 'Back to lists', root_path, class: 'btn btn-primary' %>
  <%= link_to 'Add Movie', new_list_bookmark_path(@list), class: 'btn btn-success' %>

  <div class="card-container">
    <% if @bookmarks.empty? %>
      <h3>Empty</h3>
    <% else %>
      <% @bookmarks.each do | bookmark | %>
        <div class="card-movie">
          <img src="<%= bookmark.movie.poster_url %>" alt="movie-poster">
          <h3 class='mx-3'><%= bookmark.movie.title %></h3>
          <div class='d-flex'>
            <p class='mx-3'><i class="fas fa-star" style="color: #fcbf49"></i> <%= bookmark.movie.rating %></p>
            <%= link_to  bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" }, class: 'ml-auto mx-3' do%>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </div>
          <p class='mx-3'><%= bookmark.movie.overview %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
